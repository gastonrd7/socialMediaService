{
    "compilerOptions": {
        "outDir": "./build",
        "sourceMap": true,
        "target": "es6",
        "module": "commonjs",
        "lib": [
            "esnext",
            "es5",
            "es6",
            "dom",
            "es2015.core",
            "es2015.collection",
            "es2015.generator",
            "es2015.iterable",
            "es2015.promise",
            "es2015.proxy",
            "es2015.reflect",
            "es2015.symbol",
            "es2015.symbol.wellknown",
            "esnext.asynciterable"
          ],
        "types": ["reflect-metadata"],
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true
    },
    "include":[
        "./**/*"
    ],
    "exclude": [
        "node_modules/**/*",
        "./build/**/*"
    ]
}